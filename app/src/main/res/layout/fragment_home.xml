<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".HomeActivity"
android:id="@+id/fragment_home"
android:background="@color/white"
android:orientation="vertical">

<!--상단의 툴바 입니다. -->
    <androidx.appcompat.widget.Toolbar
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/toolbar"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    >

    <!--이 내부에서 툴바를 꾸미면 됩니다. 버튼이던 뭐던~ -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="35sp"
        android:text="DOIT"/>

</androidx.appcompat.widget.Toolbar>

<RelativeLayout
    android:id="@+id/frameLayout"
    android:layout_width="wrap_content"
    android:layout_height="640dp"
    app:layout_constraintBottom_toTopOf="@id/bottomNavi"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:background="@drawable/emptyroom">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" +"
        android:textSize="20dp"
        android:textStyle="bold"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="      개"
        android:textSize="20dp"
        android:textStyle="bold"></TextView>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="270dp"
        android:text="두잇이와 함께한 지"
        android:textStyle="italic|bold"></TextView>

    <TextView
        android:id="@+id/text2"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="__"
        android:textStyle="italic|bold"></TextView>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="일"
        android:textStyle="italic|bold"></TextView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="300dp"
        android:background="@drawable/bu"
        android:textColor="@android:color/black">

    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘의 퀘스트를 확인해봐!"
        android:layout_marginTop="120dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true">
    </TextView>
    <ImageView
        android:layout_width="218dp"
        android:layout_height="224dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/doit" />
</RelativeLayout>


</LinearLayout>